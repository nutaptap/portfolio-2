---
import Image from "astro/components/Image.astro";
import bittie from "../assets/bittie.png";
import LinkDark from "./LinkDark.astro";
import Label from "./Label.astro";
import Git from "../icons/Git.astro";
import Link from "../icons/Link.astro";
import Angular from "../icons/Angular.astro";
import Typescript from "../icons/Typescript.astro";
import Node from "../icons/Node.astro";
import Javascript from "../icons/Javascript.astro";
import Sql from "../icons/Sql.astro";

const { bittietext } = Astro.props;
---

<article class="mt-12">
  <div
    class="bg-[url('../assets/gradient-2.webp')] bg-[length:1000px] rounded-xl"
  >
    <a href="https://www.bittie.eu/" target="_blank">
      <Image
        src={bittie}
        alt="Bittie project demo"
        class="hover:scale-[103%] duration-500 p-20 drop-shadow-xl"
      />
    </a>
  </div>
  <div class="mt-8">
    <div class="flex gap-3 items-center">
      <div
        class="w-3 h-3 border-2 border-slate-800 bg-white rounded-full hidden md:block"
      >
      </div>
      <h3 class="cursor-default">Bittie - {bittietext[0]}</h3>
    </div>
    <div class="mt-8 flex gap-5 flex-wrap">
      <Label text="Angular"><Angular /></Label>
      <Label text="TypeScript"><Typescript /></Label>
      <Label text="Node"><Node /></Label>
      <Label text="Express"><Node /></Label>
      <Label text="JavaScript"><Javascript /></Label>
      <Label text="PostgreSQL"><Sql /></Label>
    </div>
    <div class="mt-8 cursor-default">
      <p>
        {bittietext[1]}<b>{bittietext[2]}</b>{bittietext[3]}
      </p><p>
        {bittietext[4]}<b>{bittietext[5]}</b>
        {bittietext[6]}
      </p><p>
        {bittietext[7]}<b>{bittietext[8]}</b>{bittietext[9]}
      </p>
    </div>
    <div class="mt-8 flex gap-3">
      <LinkDark
        text="code"
        aria-label="Bittie project source code"
        ref="https://github.com/nutaptap/bittie"><Git /></LinkDark
      >
      <LinkDark
        text="demo"
        aria-label="Bittie project demo"
        ref="https://www.bittie.eu/"><Link /></LinkDark
      >
    </div>
  </div>
</article>
