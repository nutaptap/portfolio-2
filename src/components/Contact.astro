---
import ContactIcon from "../icons/ContactIcon.astro";
import Copy from "../icons/Copy.astro";
import Left from "../icons/Left.astro";
import Mail from "../icons/Mail.astro";
import Right from "../icons/Right.astro";
import Link from "./Link.astro";

const { contact, title } = Astro.props;
---

<section class="mt-32 mb-36 text-lg w-[600px]" id="contact">
  <div class="flex gap-4">
    <Left width="12px" />
    <div class="flex gap-3 items-center">
      <ContactIcon />
      <h2 class="cursor-default mb-1">{title}</h2>
    </div>
    <Right width="12px" />
  </div>
  <div class="mt-12">
    <h3>{contact[0]}</h3>
    <p class="mt-3">
      {contact[1]}
    </p>
    <div class="flex mt-6 gap-3">
      <Link text="nutaptap@gmail.com" ref="mailto:nutaptap@gmail.com"
        ><Mail /></Link
      >
      <button
        data-copy
        class="border border-slate-400 hover:bg-slate-500 hover:border-slate-500 hover:text-white rounded-2xl py-1 px-4 bg-white text-lg tracking-wider active:bg-slate-800 active:text-white active:border-slate-800 duration-200 flex gap-1 items-center"
      >
        <Copy />
      </button>
    </div>
  </div>
</section>

<script>
  const button = document.querySelector("[data-copy]");
  function copyMail() {
    navigator.clipboard.writeText("nutaptap@gmail.com");
  }
  button.addEventListener("click", () => copyMail());
</script>
